<div class="container-fluid">
    <div class="row">
        <div class="col-10 mx-auto">
            <!--Add new post-->
            <form id="new-post">
                <h2>Create New Post</h2>
                <p>Please provide post title and relevant content below.</p>
                <br>
                <div class="form-group">
                    <label for="new-post-title">Title</label>
                    <input type="text" class="form-control" id="new-post-title" placeholder="Summarise your post in a few keywords...">
                </div>
                <div class="form-group">
                    <label for="new-post-content">Content</label>
                    <textarea rows="3" class="form-control" id="new-post-content" placeholder="Add detail about your post here..."></textarea>
                </div>
                <button id="new-post-button" type="submit" class="btn btn-primary my-3 px-4">Post</button>
            </form>
        </div>
    </div>
</div>

<script src="./js/addPost.js"></script>